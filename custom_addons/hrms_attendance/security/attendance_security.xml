<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Admin Group: Can view and manage all records -->
        <record id="group_hrms_attendance_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_hrms_attendance_category"/>
            <field name="comment">Group for HRMS Attendance Administrators</field>
        </record>

        <!-- User Group: Can view their own records -->
        <record id="group_hrms_attendance_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_hrms_attendance_category"/>
            <field name="comment">Group for HRMS Attendance Users</field>
        </record>
    </data>
</odoo>
